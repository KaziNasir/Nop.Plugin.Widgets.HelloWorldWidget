@inject Nop.Core.Domain.Common.AdminAreaSettings adminAreaSettings
@using Nop.Plugin.Widgets.HelloWorldWidget.Models
@using Nop.Web.Framework.Models.DataTables
@model StudentSearchModel

@{
    Layout = "_ConfigurePlugin";
    NopHtml.SetActiveMenuItemSystemName("nopCommerce hello world application");
    RenderDate rd = new RenderDate();
    rd.Format = "DD/MM/YYYY";
}

<h3>Students:</h3>
<form asp-controller="HelloWorld" asp-action="Configure" method="post" id="student-form">
    <div class="cards-group">
        <div class="card card-default">
            <div class="card-body">
                
                @await Html.PartialAsync("Table", new DataTablesModel
                {
                Name = "students-grid",
                UrlRead = new DataUrl("List", "HelloWorld", null),
                UrlDelete = new DataUrl("Delete", "HelloWorld", null),
                Length = Model.PageSize,
                LengthMenu = Model.AvailablePageSizes,

                ColumnCollection = new List<ColumnProperty>
                {
                new ColumnProperty(nameof(StudentModel.Name))
                {
                Title = T("Plugins.Widgets.HelloWorldWidget.Fields.Name").Text,
                Width = "200"
                },
                new ColumnProperty(nameof(StudentModel.DOB))
                {
                Title = T("Plugins.Widgets.HelloWorldWidget.Fields.DOB").Text,
                Width = "200",
                Render = rd
                },
                new ColumnProperty(nameof(StudentModel.MaritalStatus))
                {
                Title = T("Plugins.Widgets.HelloWorldWidget.Fields.MaritalStatus").Text,
                Width = "100"
                },
                new ColumnProperty(nameof(StudentModel.Id))
                {
                Title = T("Admin.Common.Edit").Text,
                ClassName = NopColumnClassDefaults.Button,
                Width = "100",
                Render = new RenderCustom("renderColumnEdit")
                },
                new ColumnProperty(nameof(StudentModel.Id))
                {
                Title = T("Admin.Common.Delete").Text,
                ClassName = NopColumnClassDefaults.Button,
                Render = new RenderButtonRemove(T("Admin.Common.Delete").Text),
                Width = "100"
                }
                }
                })
            </div>

            <script>
                function renderColumnEdit(data, type, row, meta) {
                    return '<button onclick=\"javascript:OpenWindow(\'@Url.Content("~/Admin/HelloWorld/Edit/")' + data + '?btnId=btnRefresh&formId=student-form\', 800, 800, true); return false;\" class="btn btn-default"><i class="fas fa-pencil-alt"></i>@T("Admin.Common.Edit").Text</button>';
                }
            </script>

            <div class="card-footer">
                <button type="submit" id="btnAddNewOption" name="save" class="btn btn-primary" onclick="javascript:OpenWindow('@(Url.Action("Create", "HelloWorld",  new { btnId = "btnRefresh", formId = "student-form" }))', 800, 800, true); return false;">@T("Plugins.Widget.HelloWorldWidget.AddNew")</button>

                <button id="btnRefresh" type="submit" name="save" class="btn btn-default" style="display: none"></button>
            </div>
            <script>
                $(document).ready(function () {
                    $('#btnRefresh').click(function () {
                        //refresh grid
                        updateTable('#students-grid');

                        //return false to don't reload a page
                        return false;
                    });
                });
            </script>
        </div>
    </div>
</form>